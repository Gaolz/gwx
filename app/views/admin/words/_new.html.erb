<div style="margin: 10px 0;">
  <%= form_for @word, url: admin_words_path, class: "form-horizontal" do |f| %>
    <div class="form-group">
      <%= f.text_area :body, placeholder: "内容", class: "form-control", rows: "6" %>
    </div>
    <div class="form-group">
      <%= f.submit "发出去。。。", class: "btn btn-success pull-right" %>
    </div>
  <% end %>
</div>
