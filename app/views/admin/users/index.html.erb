<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>添加</h3>
    <%= render partial: 'new' %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>icon</th>
          <th>姓名</th>
          <th>拼音</th>
          <th>性别</th>
          <th>生日</th>
          <th>电话</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag(user.icon) if user.icon.present? %></td>
            <td><%= user.name %></td>
            <td><%= user.pinyin %></td>
            <td><%= user.gender %></td>
            <td><%= user.birthday %></td>
            <td><%= user.mobile %></td>
            <td><%= link_to "修改", edit_admin_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
   <div class="text-center"><%= paginate @users %></div>
  </div>
</div>
