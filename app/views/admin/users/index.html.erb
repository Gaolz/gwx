<div class="row">
  <div class="col-md-4">
    <%= render partial: 'new' %>
  </div>
  <div class="col-md-6">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th></th>
          <th>姓名</th>
          <th>拼音</th>
          <th>性别</th>
          <th>生日</th>
          <th>电话</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag letter_avatar_url(user.pinyin, 50) %></td>
            <td><%= user.name %></td>
            <td><%= user.pinyin %></td>
            <td><%= I18n.t "users.gender.#{user.sex}" %></td>
            <td><%= user.birthday.to_date %></td>
            <td><%= user.mobile %></td>
            <td><%= link_to "修改", edit_admin_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
   <div class="text-center"><%= paginate @users %></div>
  </div>
</div>
