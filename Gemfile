gem 'rails-i18n'
gem 'pg', '~> 0.15'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# uploader
gem 'carrierwave'
gem 'mini_magick', '~> 4.3.0', require: false

# add emoji
gem 'gemoji'

# use slim as template
gem 'slim-rails'

# use bootstrap as css framework
gem 'bootstrap-sass', '~> 3.3.6'

# simditor as blog editor
gem 'simditor'

gem 'puma'
gem 'yettings'
gem 'kaminari'
gem 'chinese_pinyin'
